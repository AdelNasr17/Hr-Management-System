@model UpdateEmployeeDto
@inject IDepartmentService departmentService
@{
    ViewData["Title"] = "Edit";
    ViewBag.Action = "Edit";
    var Departments = new SelectList(departmentService.GetAllDepartments(),
    nameof(DepartmentToReturnDto.Id), nameof(DepartmentToReturnDto.Name));
}


<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Edit" class="col-8">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" /> 

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name" for="Name"></label>
            <input asp-for="Name" class="form-control" id="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Email" for="Email"></label>
            <input asp-for="Email" class="form-control" type="email" id="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Address" for="Address"></label>
            <input asp-for="Address" class="form-control" id="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="PhoneNumber" for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" type="tel" id="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Age" for="Age"></label>
            <input asp-for="Age" class="form-control" type="number" min="0" id="Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="HiringDate" for="HiringDate"></label>
            <input asp-for="HiringDate" class="form-control" type="date" id="HiringDate" />
            <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Salary" for="Salary"></label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01" id="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Gender"></label>
            <div>
                @foreach (Gender genderOption in Enum.GetValues<Gender>())
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="@genderOption" id="@genderOption" />
                        <label class="form-check-label" for="@genderOption">@genderOption</label>
                    </div>
                }
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="EmployeeType"></label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                <option value="">Select Employee Type</option>
            </select>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Department"></label>
            <select asp-for="Department" asp-items="@Departments" class="form-control">
                <option value="@null">Select Department</option>

            </select>

        </div>

        <div class="form-group mb-3">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
            <label class="form-check-label" asp-for="IsActive" for="IsActive"></label>
        </div>

        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section ValidationScripts
{
    <partial name="_ValidationScriptsPartial" />
}