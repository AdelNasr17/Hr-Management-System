@model EmployeeDetailsToReturnDto
<br />
<br />

<div class="row justify-content-center align-items-center">
    <div class="col-4">
        <img src="~/files/Images/@(Model.ImageURL ?? "NotFound.png")" class="img-fluid rounded-circle shadow" alt="Employee Image" />
    </div>
</div><ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul><div class="tab-content p-3 bg-light border rounded" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="Age"></label>
                    <input asp-for="Age" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="HiringDate"></label>
                    <input asp-for="HiringDate" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="Salary"></label>
                    <input asp-for="Salary" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold" asp-for="Gender"></label>
                    <input asp-for="Gender" class="form-control" readonly />
                </div>
            </div>
        </div>
    </div><!-- Administration Tab Content -->
<div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>

</div>



<!--Style-->
<style>
    .nav-tabs .nav-link {
        font-weight: bold;
        color: #495057;
    }
    .nav-tabs .nav-link.active {
        background-color: #007bff;
        color: white;
    }
    .form-control {
        border-radius: 8px;
    }
    .border {
        border-radius: 8px !important;
    }
    .rounded-circle {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>