
@model IEnumerable<EmployeeToReturnDto>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<a class="btn btn-primary" asp-controller="Employee" asp-action="Create">Create Employee</a>
<br />
@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Department)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(E=>employee.Name)</td>
                    <td>@Html.DisplayFor(E=>employee.Email)</td>
                    <td>@Html.DisplayFor(E=>employee.EmployeeType)</td>
                    <td>@Html.DisplayFor(E=>employee.Age)</td>
                    <td>@Html.DisplayFor(E=>employee.Salary)</td>
                    <td>@Html.DisplayFor(E=>employee.Department)</td>
                    <td>@Html.DisplayFor(E=>employee.IsActive)</td>
                    <td>@Html.DisplayFor(E=>employee.Gender)</td>

                   <partial name="_ButtonsPartial" model="@employee.Id"/>
                </tr>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal-@employee.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@employee.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel-@employee.Id">Delete Department</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this Employee?
                            </div>
                            <div class="modal-footer">
                                <form asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="mt-4">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Emloyees Found!</h2>
    </div>
}