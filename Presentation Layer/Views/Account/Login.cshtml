@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}



<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="text-denger"></div>
		<form asp-action="Login">
		
		
			<input type="email" asp-for="Email" placeholder="Enter ConfirmPassword" />
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input type="password" asp-for="Password" placeholder="Enter the Password" />
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me </span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
	</div>
</div>
@section ValidationScripts
{
	<partial name="_ValidationScriptsPartial" />

}



