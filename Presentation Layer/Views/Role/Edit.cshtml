@model RoleViewModel
@{
    ViewData["Title"] = "Edit Role";
    ViewBag.Action = "Edit";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h2 class="mb-0">Edit Role</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-controller="Role" asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold text-primary">Role Name</label>
                            <input asp-for="Name" class="form-control shadow-sm border-primary" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <h3 class="mt-4 text-center text-secondary">Assign Users In Role</h3>
                        <div class="form-group border rounded p-3 bg-light shadow-sm">
                            @for (int i = 0; i < Model.Users.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="Users[i].UserId" />
                                    <input type="hidden" asp-for="Users[i].UserName" />
                                    <input asp-for="Users[i].IsSelected" class="form-check-input" />
                                    <label class="form-check-label">@Model.Users[i].UserName</label>
                                </div>
                            }
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">Edit</button>
                            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Back to list</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}
