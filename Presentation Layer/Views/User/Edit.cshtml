@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    ViewBag.Action = "Edit";

}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit User</h1>
    <div class="container mt-5">
        <div class="card shadow-lg p-4 bg-white rounded">
            <h2 class="text-center mb-4 text-primary">Edit User</h2><form method="post" asp-controller="User" asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control shadow-sm" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">First Name <span class="text-danger">*</span></label>
                    <input asp-for="FName" class="form-control shadow-sm" />
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Last Name</label>
                    <input asp-for="LName" class="form-control shadow-sm" />
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>


                <div class="text-center mt-4">
                    <button class="btn btn-success btn-lg px-4 shadow-sm">Edit</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark btn-lg px-4">Back to list</a>
                </div>
            </form>
        </div>

    </div>


</div>

@section ValidationScripts
{
    <partial name="_ValidationScriptsPartial" />
}