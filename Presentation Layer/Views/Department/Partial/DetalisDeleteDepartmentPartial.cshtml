@model DepartmentDetailsToReturnDto

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border rounded bg-light" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row g-3">
            <div class="form-group col-md-6">
                <label class="col-form-label fw-bold" asp-for="Code"></label>
                <input asp-for="Code" class="form-control shadow-sm" readonly />
            </div>
            <div class="form-group col-md-6">
                <label class="col-form-label fw-bold" asp-for="Name"></label>
                <input asp-for="Name" class="form-control shadow-sm" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label fw-bold" asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control shadow-sm" readonly></textarea>
            </div>
            <div class="form-group col-12">
                <label class="col-form-label fw-bold" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control shadow-sm" readonly />
            </div>
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border rounded bg-light" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row g-3">
            <div class="form-group col-12">
                <label class="col-form-label fw-bold" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control shadow-sm" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label fw-bold" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control shadow-sm" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label fw-bold" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control shadow-sm" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label fw-bold" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control shadow-sm" readonly />
            </div>
        </div>
    </div>

    @if (ViewData["Title"] as string == "Details")
    {
        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success shadow-sm px-4">Edit</a>
            <a asp-action="Index" class="btn btn-outline-dark shadow-sm px-4">Back To list</a>
        </div>
    }
    else
    {
        <div class="mt-4 d-flex gap-2">
            <form method="post" asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id">
                <input type="submit" class="btn btn-danger shadow-sm px-4" value="Delete" />
                <a asp-action="Index" class="btn btn-outline-dark shadow-sm px-4">Back To list</a>
            </form>
        </div>
    }
</div>


<!--Style-->
<style>
    .nav-tabs .nav-link {
        font-weight: bold;
        color: #495057;
        border-radius: 5px 5px 0 0;
    }

        .nav-tabs .nav-link.active {
            background-color: #007bff;
            color: white;
        }

    .form-control[readonly] {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
    }

    .btn {
        transition: all 0.3s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>