@model DepartmentViewModel

<form method="post" asp-controller="Department" asp-action="@ViewBag.Action" class="col-md-8 mx-auto p-4 shadow rounded bg-light">
    <h2 class="text-center text-primary mb-4">@ViewBag.Action Department</h2>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group mb-3">
        <label class="form-label fw-bold" asp-for="Code"></label>
        <input asp-for="Code" class="form-control border-primary" placeholder="Enter department code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-bold" asp-for="Name"></label>
        <input asp-for="Name" class="form-control border-primary" placeholder="Enter department name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-bold" asp-for="Description"></label>
        <textarea class="form-control border-primary" asp-for="Description" placeholder="Enter department description"></textarea>
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-bold" asp-for="CreationDate"></label>
        <input type="date" asp-for="CreationDate" class="form-control border-primary" />
    </div>

    <div class="mt-4 text-center">
        @if (ViewBag.Action == "Create")
        {
            <input class="btn btn-primary px-4" type="submit" value="Create" />
        }
        else
        {
            <input class="btn btn-success px-4" type="submit" value="Edit" />
        }
        <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark ms-2">Back to list</a>
    </div>
</form>



<!--Style-->
<style>
    .form-control {
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            border-color: #007bff;
        }

    .btn-primary, .btn-success {
        transition: transform 0.2s;
    }

        .btn-primary:hover, .btn-success:hover {
            transform: scale(1.05);
        }
</style>